{
    "compilerOptions": {
      "target": "ESNext",
      "removeComments": true,
      "outDir": "dist",
      "module": "esnext",
      "strict": true,
      "sourceMap": false,
      "skipLibCheck": true,
      "declaration": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declarationDir": "dist",
      "lib": ["dom", "es5", "es2015.promise"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types"]
    },
    //"include": ["./index.ts", "./src/**/*.ts", "./types.d.ts"]
    "include": ["./index.ts"]
  
}