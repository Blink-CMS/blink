{
    "compilerOptions": {
    "types": ["node"],
		"isolatedModules": true,
    "experimentalDecorators": true,
      "target": "ESNext",
      "removeComments": true,
      "outDir": "dist",
      "module": "ESNext",
      "strict": true,
      "sourceMap": false,
      "skipLibCheck": true,
      "declaration": true,
      //"resolveJsonModule": true,
      "declarationDir": "dist",
      "lib": ["ESNext"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types"]
    },
    //"include": ["./index.ts", "./src/**/*.ts", "./types.d.ts"]
    "include": ["src/**/*.d.ts","./index.ts", "src/**/*.svelte", "src"]
    //"include": ["./index.ts"]
  
}